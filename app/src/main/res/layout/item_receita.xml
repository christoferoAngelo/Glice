<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardBackgroundColor="@color/branco"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- 1. CardView para a Imagem (Thumbnail) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- ID: imgReceitaThumbnail (Usado no ReceitaAdapter) -->
            <ImageView
                android:id="@+id/imgReceitaThumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/imagem_da_receita"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>


        <!-- 2. Layout de Conteúdo (Nome, IG, Fonte) -->
        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/cardImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imgFavoriteList"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- ID: txtNomeReceita (Resolvendo o erro atual) -->
            <TextView
                android:id="@+id/txtNomeReceita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/preto"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Receita de Bolo de Cenoura com Nome Bem Longo" />

            <!-- ID: txtIndiceGlice -->
            <TextView
                android:id="@+id/txtIndiceGlice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/rosa3"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                tools:text="IG: Baixo (35)" />

            <!-- ID: txtFonte -->
            <TextView
                android:id="@+id/txtFonte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/cinza_escuro_texto"
                android:textSize="12sp"
                android:layout_marginTop="1dp"
                tools:text="Fonte: Culinária Saudável" />
        </LinearLayout>

        <!-- 3. Botão de Favoritar -->
        <!-- ID: imgFavoriteList -->
        <ImageView
            android:id="@+id/imgFavoriteList"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/baseline_favorite_border_24"
            app:tint="@color/rosa4"
            android:contentDescription="Adicionar ou remover dos favoritos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>