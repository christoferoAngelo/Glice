<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    tools:context=".activity.PerfilActivity">

    <!-- Título da Tela -->
    <TextView
        android:id="@+id/txtTituloPerfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/ysabeau_bold"
        android:gravity="center"
        android:text="MEU PERFIL"
        android:textColor="@color/rosa4"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Card para a Foto de Perfil -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardFotoPerfil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="selecionarFotoPerfil"
        app:cardCornerRadius="50dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloPerfil">

        <ImageView
            android:id="@+id/imgFotoPerfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Foto de perfil do usuário"
            tools:src="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <!-- Ícone de Edição da Foto -->
    <ImageView
        android:id="@+id/imgEditarFoto"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/circle_background"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="@+id/cardFotoPerfil"
        app:layout_constraintBottom_toBottomOf="@+id/cardFotoPerfil"
        app:srcCompat="@drawable/outline_person_edit_24"
        app:tint="@color/branco"
        android:elevation="7dp"
        android:contentDescription="Editar Foto" />

    <!-- Nome do Usuário -->
    <TextView
        android:id="@+id/txtNomeUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/ysabeau_bold"
        android:textColor="@color/preto"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/btnEditarPerfilIcone"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardFotoPerfil"
        tools:text="Nome do Usuário Aqui" />

    <!-- Botão de Edição do Perfil -->
    <ImageButton
        android:id="@+id/btnEditarPerfilIcone"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:onClick="abrirTelaEdicao"
        app:tint="@color/rosa3"
        app:srcCompat="@drawable/twotone_edit_24"
        app:layout_constraintStart_toEndOf="@+id/txtNomeUsuario"
        app:layout_constraintTop_toBottomOf="@+id/cardFotoPerfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/txtNomeUsuario"
        android:contentDescription="Editar Perfil" />

    <!-- Divisor -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="@color/cinza_claro"
        app:layout_constraintTop_toBottomOf="@+id/txtNomeUsuario" />

    <!-- NOVO: TabLayout para as abas deslizantes (Livro de Receitas / Favoritos) -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutPerfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIndicatorGravity="bottom"
        app:tabTextColor="@color/cinza_escuro_texto"
        app:tabSelectedTextColor="@color/rosa4"
        app:tabIndicatorColor="@color/rosa4"
        app:tabIconTint="@color/tab_item_color"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </com.google.android.material.tabs.TabLayout>

    <!-- NOVO: ViewPager2 para o conteúdo deslizante -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerPerfil"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayoutPerfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>