<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:layout_gravity="center_vertical"
    app:cardCornerRadius="24dp"
    app:cardElevation="12dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp"
        android:gravity="center"
        android:background="@color/branco">

        <!-- Imagem Circular (PRINCÍPIO DA FIGURA-FUNDO) -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/boas_vindas_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/welcome"
            app:civ_border_color="#4CAF50"
            app:civ_border_width="3dp" />

        <!-- Título (PRINCÍPIO DA PROXIMIDADE) -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="BOAS VINDAS"
            android:textColor="#1A1A1A"
            android:textSize="28sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="4dp" />

        <!-- Descrição (PRINCÍPIO DA CONTINUIDADE) -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="O Glice é seu companheiro fitness para receitas saudáveis e nutritivas. Alcance seus objetivos com alimentação balanceada!"
            android:textColor="#666666"
            android:textSize="16sp"
            android:lineSpacingExtra="8dp"
            android:letterSpacing="0.01" />

    </LinearLayout>

</androidx.cardview.widget.CardView>