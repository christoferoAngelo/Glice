<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/ysabeau_bold"
        android:text="Filtrar Receitas"
        android:textColor="@color/rosa4"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Índice Glicêmico:"
        android:textColor="@color/rosa3" />

    <Spinner
        android:id="@+id/spnIndice"
        android:entries="@array/indices_glice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Adicionar ingrediente:"
        android:textColor="@color/rosa3" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtIngrediente"
            android:hint="Ex: cenoura"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnAddIngrediente"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/rosa4"
            android:text="+" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp"
        android:paddingBottom="5dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerIngredientes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp" />

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btnAplicarFiltro"
        style="@style/Widget.Material3.MaterialTimePicker.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/rosa2"
        android:text="APLICAR FILTROS"
        android:textColor="@color/branco" />

    <Button
        android:id="@+id/btnCancelarFiltro"
        style="@style/Widget.Material3.MaterialTimePicker.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Cancelar" />
</LinearLayout>
