<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Título da tela -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp"
                android:text="ADICIONAR RECEITA"
                android:textColor="@color/rosa4"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Título da receita -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Título da Receita"
                app:startIconDrawable="@drawable/round_title_24"
                app:boxStrokeColor="@color/rosa4"
                app:hintTextColor="@color/rosa4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Ingredientes -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Ingredientes (um por linha)"
                app:startIconDrawable="@drawable/outline_kitchen_24"
                app:boxStrokeColor="@color/rosa4"
                app:hintTextColor="@color/rosa4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editIngredientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="3" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Preparo -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Modo de Preparo"
                app:startIconDrawable="@drawable/outline_menu_book_2_24"
                app:boxStrokeColor="@color/rosa4"
                app:hintTextColor="@color/rosa4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editPreparo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="5" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Anotações -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Anotações (opcional)"
                app:startIconDrawable="@drawable/outline_book_24"
                app:boxStrokeColor="@color/rosa4"
                app:hintTextColor="@color/rosa4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editAnotacoes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Fonte -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Fonte (opcional)"
                app:startIconDrawable="@drawable/outline_feature_search_24"
                app:boxStrokeColor="@color/rosa4"
                app:hintTextColor="@color/rosa4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editFonte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Link -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Link (opcional)"
                app:startIconDrawable="@drawable/outline_add_link_24"
                app:boxStrokeColor="@color/rosa4"
                app:hintTextColor="@color/rosa4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botão Salvar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSalvar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:elevation="6dp"
                android:text="Salvar Receita"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/rosa3"
                app:cornerRadius="12dp" />

        </LinearLayout>

    </FrameLayout>

</ScrollView>